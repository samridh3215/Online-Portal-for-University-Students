<div class="modal">
  <div class="flex-box enlarge backdrop">
      <input class="input-fields" name="Title" id="new-post-title" placeholder="Enter the title">
      <div class="tag-container">

        <% tags.forEach(tag=>{ %>
          <div>
           <input class="tag-selection" id="<%= tag %>-select" type="checkbox" value="<%= tag %>">  
          <label for="<%= tag %>-select"><%= tag %></label>
      
          </div>
          <% }) %>
        </div>
      <textarea class="input-fields" name="Content" id="new-post-content" cols="30" rows="15" placeholder="Enter your question"></textarea>
  </div>
  <div class="actions-button">
      <button style ="border: 2px #1ABC9C solid;" id="send-post">Post</button>
      <button style ="border: 2px #1ABC9C solid;" id="close-modal">Close</button>
  </div>

</div>