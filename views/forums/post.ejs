<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Forums</title>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="./css/styles.css">
  <link rel="stylesheet" href="./css/forums.css">
</head>
<body>
  <% if(type=="Student"){ %>
    <%- include("../partials/header"); -%>
    <% }else{ %>
    <%- include("../partials/facultyHeader"); -%>
    <%}%>

    <section class="post">

          <div class="post-container rounded-box">
            <h5 class="post-date"><%= content.author.fname %>  at <%= content.date %></h5>
              <h4 class="post-author"> </h4>  
              <h2 class="post-title"> <%= content.title %></h2>
              <h3 class ="post-query"> <%= content.query %></h3>


          </div>
          <div class="post-comment rounded-box align-items-center" id="comment-container">
            <textarea placeholder="What are your thoughts?" id="user-comment" cols="20" rows="2" class="comment-box"></textarea>
            <button id="send-reply" class="btn btn-success">Reply</button>

          </div>

            <div class="replies-container">
              <h3>
                Comments
              </h3>
              <% if (content.replies){ %>
                <div class ="replies">
              <% content.replies.forEach((item)=>{ %>
                <div class="reply rounded-box" style="margin-left:<%= (item.depth-1)*20  %>px;">
                <h5 class="reply-author"> <%= item.author.name %></h5> 
                <h2 class = "reply-content"> <%= item.reply %></h2>
                </div>
             <% }) %>
                </div>  
              <% } %>
            </div>

  

    </section>
   
<%- include("../partials/footer"); -%>

<script src="./js/jquery.min.js"></script>
<script src="./js/forums.controller.js"></script>
<script src="./js/post.controller.js"></script>
</body>
</html>