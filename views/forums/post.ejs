<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Forums</title>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="./css/styles.css">
  <link rel="stylesheet" href="./css/forums.css">
</head>
<body>
    <%- include("../partials/header"); -%>

    <section class="post">

          <div class="post-container">
              <h4 class="post-author"> <%= content.author.name %> </h4>  
              <h2 class="post-title"> <%= content.title %></h2>
              <p class ="post-query"> <%= content.query %></p>


          </div>
          <div class="post-comments">
            <textarea placeholder="What are your thoughts?" id="post-comment" cols="30" rows="10"></textarea>
            <button id="send-reply">Reply</button>
            <br>
            <h3>
              What other people think
            </h3>
            <div class="replies-container">
              <% if (content.replies){ %>
                <div class ="replies">
              <% content.replies.forEach((item)=>{ %>
                <p class="reply-author"> <%= item.author.name %></p> 
                <% var formatted = intendation(item.depth, item.reply)%>
                <p class = "reply-content"> <%= formatted %></p>

             <% }) %>
                </div>  
              <% } %>
            </div>
          </div>

  

    </section>
   
<%- include("../partials/footer"); -%>

<script src="./js/jquery.min.js"></script>
<script src="./js/forums.controller.js"></script>
<script src="./js/post.controller.js"></script>
</body>
</html>