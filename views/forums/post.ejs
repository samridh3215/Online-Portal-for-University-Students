<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./css/styles.css">
    <link rel="stylesheet" href="./css/forums.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <title>Post</title>
</head>
<body>
    <%- include("../partials/header"); -%>

    <section class="post">

          <div class="post-container">
              <h4 class="post-author"> <%= content.author.name %> </h4>  
              <h2 class="post-title"> <%= content.title %></h2>
              <p class ="post-query"> <%= content.query %></p>
              <% if (content.replies){ %>
                <div class ="post-reply-container">
              <% content.replies.forEach((item)=>{ %>
                <p class="reply-author"> <%= item.author.name %></p> 
                <% var formatted = intendation(item.depth, item.reply)%>
                <p class = "reply-content"><%= formatted %></p>
                <!-- <p class = "reply-content"><%= item.reply %></p> -->

             <% }) %>
                </div>  
              <% } %>

          </div>

    </section>
   
<%- include("../partials/footer"); -%>

<script src="./js/jquery.min.js"></script>
<script src="./js/forums.controller.js"></script>
</body>
</html>